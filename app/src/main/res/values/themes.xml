<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemePrimary.Right" parent="AppThemePrimary">
        <item name="toolbarStyle">@style/Toolbar.Right</item>
        <item name="android:windowAnimationStyle">@style/RightSideAnimation</item>
    </style>

    <style name="AppThemePrimary.NoNavigation" parent="AppThemePrimary">
        <item name="toolbarStyle">@style/Toolbar.NoNavigation</item>
    </style>

    <style name="AppThemePrimary" parent="AppThemeDayNight">
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/textHighEmphasisSecondary</item>
        <item name="colorPrimaryDark">@color/titleBackground</item>

        <item name="controlBackground">@color/green</item>

        <item name="colorSecondary">@color/titleBackground</item>
        <item name="colorOnSurface">@color/textHighEmphasis</item>
        <item name="android:actionMenuTextColor">@color/menuText</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/textHighEmphasis</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:textColorPrimary">@color/textHighEmphasisSecondary</item>
        <item name="colorAccent">@color/textHighEmphasisSecondary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:colorAccent">@color/textHighEmphasisSecondary</item>
        <!--        <item name="android:fontFamily">@font/quicksand_bold</item>-->
        <item name="toolbarColor">@color/background</item>
        <item name="textHighEmphasis">@color/textHighEmphasis</item>
        <item name="textHighEmphasisSecondary">@color/textHighEmphasisSecondary</item>
        <item name="textHighEmphasisInverse">@color/textHighEmphasisInverse</item>
        <item name="textMediumEmphasis">@color/textMediumEmphasis</item>
        <item name="textMediumEmphasisSecondary">@color/textMediumEmphasisSecondary</item>

        <item name="textAppearanceButton">@style/TextAppearance.14.Regular</item>
        <item name="textAppearanceCaption">@style/TextAppearance.12.Regular</item>

        <item name="textInputStyle">@style/TextInputLayoutAppearance</item>
        <item name="materialButtonStyle">@style/FilledButton</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButton</item>
        <item name="dialogTheme">@style/Dialog</item>
        <item name="toolbarStyle">@style/Toolbar.Popup</item>
        <item name="alertDialogStyle">@style/Dialog</item>
        <item name="android:dialogTheme">@style/Dialog</item>
    </style>

    <style name="SplashTheme" parent="AppThemePrimary">
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/textHighEmphasisSecondary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="AppThemeDayNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">
            @bool/lightNavigationBar
        </item>
    </style>

</resources>